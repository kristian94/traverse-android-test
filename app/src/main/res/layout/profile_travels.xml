<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:id="@+id/travelsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <!--Card Image-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/travel_card_paris_01" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/travel_card_gradient"
                android:orientation="vertical">


                <!--City-->
                <TextView
                    android:id="@+id/card_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:text="Paris"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_huge" />

                <!--Country-->
                <TextView
                    android:id="@+id/card_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_city"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_negative_medium"
                    android:text="france"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium" />

                <!--Date icon-->
                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/card_city"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:src="@drawable/ic_date_black_24dp"
                    android:tint="@color/text" />

                <!--Date-->
                <TextView
                    android:id="@+id/date_simplified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/date_icon"
                    android:layout_marginBottom="-4dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_toRightOf="@id/date_icon"
                    android:text="Summer 2016"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_medium" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_02"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/card_view"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <!--Card Image-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/travel_card_paris_01" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/travel_card_gradient"
                android:orientation="vertical">


                <!--City-->
                <TextView
                    android:id="@+id/card_city_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:text="Paris"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_huge" />

                <!--Country-->
                <TextView
                    android:id="@+id/card_country_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_city_02"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_negative_medium"
                    android:text="france"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_medium" />

                <!--Date icon-->
                <ImageView
                    android:id="@+id/date_icon_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/card_city_02"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:src="@drawable/ic_date_black_24dp"
                    android:tint="@color/text" />

                <!--Date-->
                <TextView
                    android:id="@+id/date_simplified_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/date_icon_02"
                    android:layout_marginBottom="-4dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_toRightOf="@id/date_icon_02"
                    android:text="Summer 2016"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_medium" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>